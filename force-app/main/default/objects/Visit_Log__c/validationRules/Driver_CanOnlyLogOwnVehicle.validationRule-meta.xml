<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Driver_CanOnlyLogOwnVehicle</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(ISBLANK(Vehicle__c)) &amp;&amp; Vehicle__r.Driver__c &lt;&gt; $User.Id</errorConditionFormula>
    <errorMessage>You can only create visit logs for the vehicle assigned to you.</errorMessage>
</ValidationRule>
